<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent"
	android:id="@+id/jsonfragDrawerLayout1">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:id="@+id/jsonfragLinearLayout1">

		<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="JSON HELLO!"
			android:layout_gravity="center"/>

		<ListView
			android:layout_height="400dp"
			android:layout_width="match_parent"
			android:id="@+id/jsonfragListView1"
			android:divider="@null"/>

	</LinearLayout>

	<RelativeLayout
		android:layout_height="match_parent"
		android:layout_width="wrap_content"
		android:id="@+id/jsonfragLinearLayout2"
		android:layout_gravity="left"
		android:gravity="start"
		android:background="#F8F6F5">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:orientation="horizontal"
			android:layout_alignParentTop="true"
			android:id="@+id/jsonfragLinearLayout3">

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:id="@+id/jsonfragButton1"
				android:text="物品"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="单位"
				android:id="@+id/jsonfragButton2"/>

			<Button
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="技能"
				android:id="@+id/jsonfragButton3"/>

		</LinearLayout>

		<Button
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:text="添加"
			android:id="@+id/jsonfragButton4"
			android:layout_alignParentBottom="true"/>

		<LinearLayout
			android:layout_height="match_parent"
			android:layout_width="wrap_content"
            android:layout_below="@id/jsonfragLinearLayout3"
            android:layout_above="@id/jsonfragButton4"
			android:orientation="vertical">

				<ListView
					android:layout_height="match_parent"
					android:layout_width="match_parent"
					android:id="@+id/jsonfragListView2"/>


		</LinearLayout>

	</RelativeLayout>

</android.support.v4.widget.DrawerLayout>

